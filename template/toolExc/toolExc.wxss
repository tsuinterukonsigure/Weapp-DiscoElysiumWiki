/* template/toolExc/toolExc.wxss */
.tool-exc-ttl {
    display: flex;
    border: 1rpx solid #333;
    overflow: hidden;
    margin-top: 20rpx;
    height: 50rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.tool-exc-ttl > text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    padding-right: 25rpx;
    padding-left: 20rpx;
    font-weight: bold;
    color: gray;
}
.tool-exc-ttl > text:nth-child(2) {
    width: 180rpx;
    border-right: 1rpx solid #333;
}
.tool-exc-ttl > text:nth-child(3) {
    width: 250rpx;
}
.tool-card {
    display: flex;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border: 1rpx solid #333 !important;
    overflow: hidden;
}
.tool-card > image {
    width: 128rpx !important;
    height: 128rpx !important;
    background-color: #222;
    padding: 6rpx 6rpx 6rpx 6rpx;
    border-right: 1rpx solid #333;
}
.tool-card > text {
    font-size: small;
    height: 100%;
    background-color: #111;
    text-align: left;
    flex-direction: column;
    justify-content: center;
    display: flex;
    padding-right: 25rpx;
    padding-left: 20rpx;
}
.tool-card > text:nth-child(2) {
    width: 180rpx;
    border-right: 1rpx solid #333;
}
.tool-card > text:nth-child(3) {
    width: 250rpx;
}