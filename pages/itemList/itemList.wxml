<!--pages/itemList/itemList.wxml-->
<view>
    <import src="/template/bg/bg.wxml"/>
    <template is="bg"></template>
    <import src="/template/searchBar/searchBar.wxml"/>
    <template is="search"/>

    <view>
        <van-tabs active="{{active}}" nav-class="item-tab" ellipsis="false" title-active-color="white" color="#c19664" animated>
            <van-tab title="工具">
                <view class="id-slot">
                    <import src="/template/toolExc/toolExc.wxml"/>
                    <template is="tool-exc" data="{{tools}}"></template>
                </view>
            </van-tab>
            <van-tab title="服装">
                <view class="id-slot">
                    <import src="/template/clothExc/clothExc.wxml"/>
                    <template is="cloth-exc" data="{{clothes}}"></template>
                </view>
            </van-tab>
            <van-tab title="成瘾物">
                <view class="id-slot">
                    
                </view>
            </van-tab>
            <van-tab title="道具">
                <view class="id-slot">
                    
                </view>
            </van-tab>
            <van-tab title="互动">
                <view class="id-slot">
                    
                </view>
            </van-tab>
        </van-tabs>
    </view>
</view>